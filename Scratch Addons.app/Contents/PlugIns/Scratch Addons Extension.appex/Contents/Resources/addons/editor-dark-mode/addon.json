{
  "name": "Editor dark mode",
  "description": "Dark mode for the Scratch 3.0 project editor. Multiple options by different authors available.",
  "credits": [
    {
      "name": "infinitytec (3.Dark, 3.Darker)"
    },
    {
      "name": "_nix (Dark editor)"
    }
  ],
  "userstyles": [
    {
      "url": "dark-editor.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "selectedMode",
        "value": "Dark editor"
      }
    },
    {
      "url": "3dark.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "selectedMode",
        "value": "3.Dark"
      }
    },
    {
      "url": "3darker.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "selectedMode",
        "value": "3.Darker"
      }
    },
    {
      "url": "global.css",
      "matches": ["https://scratch.mit.edu/projects/*"]
    },
    {
      "url": "text-shadow.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "textShadow",
        "value": true
      }
    }
  ],
  "settings": [
    {
      "name": "Dark mode version",
      "id": "selectedMode",
      "type": "select",
      "potentialValues": ["3.Darker", "3.Dark", "Dark editor"],
      "default": "3.Darker"
    },
    {
      "name": "Text shadow on blocks",
      "id": "textShadow",
      "type": "boolean",
      "default": false
    }
  ],
  "tags": ["editor", "theme"],
  "enabledByDefault": false
}
